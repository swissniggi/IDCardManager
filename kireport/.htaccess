# Apache >= 2.4
<ifModule mod_authz_core.c>
    Require all denied
    Require local
</ifModule>

# Apache < 2.4
<ifModule !mod_authz_core.c>
    order deny,allow
    deny  from all
    allow from localhost
    allow from 127.0.0.1
    allow from ::1
</ifModule>